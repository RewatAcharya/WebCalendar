

@{
    ViewData["Title"] = "Home Page";
   
}


<div class="container">
    <h2 class="text-center">Calender <span>2080</span></h2>
    <div class="row">
        <div class="col-6">
            <form asp-controller="Home" asp-action="Calendar" data-ajax="true" data-ajax-method="get" data-ajax-update="#calendar">
                <h5><select id="months" name="month">
                    <option value="1">Baishak</option>
                    <option value="2">Jesth</option>
                    <option value="3">Asar</option>
                    <option value="4">Shrawn</option>
                    <option value="5">Bhadra</option>
                    <option value="6">Aswin</option>
                    <option value="7">Kartik</option>
                    <option value="8">Mangsir</option>
                    <option value="9">Poush</option>
                    <option value="10">Magh</option>
                    <option value="11">Falgun</option>
                    <option value="12">Chaitra</option>
                    </select>
                    <input class="btn btn-primary" id="selectMonth" type="submit" value="submit" hidden />

                </h5>
            </form>
            <script>
                $(document).ready(function () {
                    $('#months').on('change', function () {
                        $('#selectMonth').click();
                        $('#calendarMonth')[0].click();
                    });

                    $('#calendarMonth')[0].click();


                });

            </script>
        </div>

        <a asp-action="Calendar" asp-controller="Home" data-ajax="true" data-ajax-method="get" data-ajax-update="#calendar" id="calendarMonth" hidden>GetCalendar</a>

        <div class="col-6 text-end">Dummy text</div>
    </div>
    <div class="row mt-4" id="calendar">
       
    </div>
</div>




